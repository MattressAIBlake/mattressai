# ============================================
# MattressAI Shopify App - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git (it's in .gitignore)
# ============================================

# ============================================
# SHOPIFY APP CREDENTIALS
# ============================================
# Get these from: https://partners.shopify.com/[org]/apps/[app]/edit
# In Partners Dashboard, these are called:
# - "Client ID" → goes in SHOPIFY_API_KEY below
# - "Client secret" → goes in SHOPIFY_API_SECRET below
SHOPIFY_API_KEY=your_client_id_here
SHOPIFY_API_SECRET=your_client_secret_here

# Scopes your app needs (comma-separated, no spaces)
SCOPES=write_products,read_customers,write_customers,read_orders,write_orders,read_content,write_content

# Your app URL (use ngrok URL for dev, production URL for prod)
HOST=https://your-app-url.fly.dev

# ============================================
# DATABASE
# ============================================
# SQLite (development only)
DATABASE_URL=file:./prisma/dev.sqlite

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# AI / LLM SERVICES
# ============================================
# Anthropic Claude (for chat)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# OpenAI (for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# ============================================
# VECTOR DATABASE
# ============================================
# Pinecone
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=mattressai-products

# ============================================
# BILLING CONFIGURATION (Phase 5)
# ============================================
BILLING_ENABLED=true
BILLING_STARTER_PRICE=0
BILLING_PRO_PRICE=49
BILLING_ENTERPRISE_PRICE=199
BILLING_TRIAL_DAYS=14

# ============================================
# FEATURE FLAGS
# ============================================
STOREFRONT_I18N_ENABLED=true

# ============================================
# OPTIONAL: MONITORING & ALERTS
# ============================================
# Sentry (error tracking)
# Get from: https://sentry.io/settings/projects/your-project/keys/
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# LogRocket (session replay)
# Get from: https://app.logrocket.com/settings/applications
# LOGROCKET_APP_ID=xxx/xxx

# ============================================
# OPTIONAL: EMAIL/SMS SERVICES
# ============================================
# SendGrid (for email alerts)
# Get from: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY=SG.xxx

# Twilio (for SMS alerts - Pro/Enterprise plans)
# Get from: https://console.twilio.com/
# TWILIO_ACCOUNT_SID=ACxxx
# TWILIO_AUTH_TOKEN=xxx
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to 'development' for local dev, 'production' for deployed
NODE_ENV=development
